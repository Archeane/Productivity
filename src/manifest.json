{
  "name": "Time Tracker & Data Analytics",
  "description": "Track and analyze your web usage to discover your browsing habits, work patterns, distraction sites and much more!",
  "version": "1.0.2",
  "manifest_version": 2,
  "icons": {
    "16": "icons/PRODUCTIVITY-16.png",
    "48": "icons/PRODUCTIVITY-48.png",
    "128": "icons/PRODUCTIVITY_128.png"
  },
  "browser_action": {
    "default_title": "productivity",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "options_page": "options/options.html",
  "offline_enabled": true,
  "content_security_policy": "script-src 'self' 'unsafe-eval'",
  "permissions": ["tabs", "idle", "storage", "unlimitedStorage"]
}
